@media (min-width: 768px) {
  .teams-sidebar {
  	position:fixed;
    height: 100%;
    border-right: 2px solid #7D7D7D;
    width: inherit;

    h3 {
      padding-left: 20px;
      padding-right: 10px;
      
      i {
        cursor: pointer;
      }
    }

    .fa {
      background-color: white;
      border-radius: 100%;
    }

    .navbar {
      border-radius: 0;

        .navbar-collapse {
          padding: 0;
          max-height: none;
        }
    }

    .side-thumbnail {
      max-width: 60px;
      height: auto;
      border: 1px solid #ddd;
      border-radius: 4px;
      float: left;
      margin-right: 10px;
    }

    .side-item {
      height: 100px;
      border-radius: 0px;

      padding: 8px;
      padding-top: 15px;

      h4 {
        display: inline;
      }
      h6 {
        margin-top: 5px;
      }
      p {
        margin-top: -2px;
      }

    }

    .list-group {
        overflow-y: auto;
        max-height: 670px;
        overflow-x: hidden;
    }

    .badge {
      width: 17px;
      height: 17px;
      padding: 2px 0 0 0;
      font-size: 10px;
      vertical-align: top;
      background-color: #F44336;
      border-radius: 100%;
      margin-top: -7px;
      margin-left: -7px;
    }
  }

  .no-teams h4 {
    border-top: 1px solid #888;
    padding: 40px;
  }
}
