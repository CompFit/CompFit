#challenge {
    .topSection{
        height: 175px;
        width: 100%;
        background-color: white;
        overflow-x: hidden;
        margin-bottom: 20px;
        border-bottom: 2px solid #888;


        img {
            width: 130px;
            height: 130px;
            float:left;
            margin-top: 20px;
        }
    }

    table {
        position: relative;
        overflow: hidden;
        /*width: 600px;*/
        border-collapse: collapse;

        td i {
            float: right;
            padding-left: 5px;
            z-index: 2;
        }
    }

    .opponent-panel-heading {
        background-color: #CC0035;
    }

    .my-panel-heading {
        background-color: #5B7FB9;
        cursor: pointer;
    }

    .panel-heading {
        height: 80px;
        padding:0px;

        img {
            width: 60px;
            height: 60px;
            margin-left: 10px;
            margin-top: 10px;
            float:left;
            /*background-color: */
        }

        p {
            padding-top: 18px;
            padding-left: 10px;
            margin-left: 70px;
            font-size: 28px;
            color: white;
        }

    }

    .bottomSection {

        tr, td {
            background: none;
        }

        .progress {
            position: absolute;
            margin-top: -8px;
            opacity: 0.2;
            left: -100%;
            width: 100%;
            height: 0px;
            z-index: 1;
            background: #8F8;
            transition:left .5s;
        }
    }

}
