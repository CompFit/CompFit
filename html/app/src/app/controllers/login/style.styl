#login {
    .row {
        margin-left: 0px;
        margin-right: 0px;
    }

    .panel {
        width: 350px;
        background-color: whitesmoke;
        border: 1px solid #e3e3e3;
        border-radius: 4px;
        -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
        box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.05);
    }

    p {
        text-align: center;
    }

    .btn-primary {
        width: 100%;
    }
}