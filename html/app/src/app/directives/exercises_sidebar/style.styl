@media (min-width: 768px) {
  .exercises-sidebar {
  	position:fixed;
  	left: 0px;
  	height: 100%;
  	min-width: 250px;

    .navbar {
    	border-radius: 0;

        .navbar-collapse {
          padding: 0;
          max-height: none;
        }
    }

    h3 {
      padding-left: 10px;
      padding-right: 10px;

      i {
        cursor: pointer;
      }
    }

    .list-group {
        overflow-y: auto;
        max-height: 670px;
        overflow-x: hidden;
    }
  }
}
