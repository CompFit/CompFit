@media (min-width: 768px) {
  .exercises-sidebar {
    position:fixed;
    height: 100%;
    border-right: 2px solid #7D7D7D;
    width: inherit;

    h3 {
      padding-left: 10px;
      padding-right: 10px;
      i {
        cursor: pointer;
      }
    }

    .fa {
      background-color: white;
      border-radius: 100%;
    }

    .navbar {
      border-radius: 0;

        .navbar-collapse {
          padding: 0;
          max-height: none;
        }
    }

    .side-item {
      height: 80px;
      border-radius: 0px;
      padding: 8px;
    }

    .list-group {
        overflow-y: auto;
        max-height: 670px;
        overflow-x: hidden;
    }
  }

  .no-exercises h4 {
    border-top: 1px solid #888;
    padding: 40px;
  }
}
