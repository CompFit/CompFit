#challenge {

    .topSection{
        height: 200px;
        margin-left: 200px;

        img {
            width: 130px;
            height: 130px;
            float:left;

            margin-top: 20px;
        }
    }

    table {
        position: relative;
        overflow: hidden;
        /*width: 600px;*/
        border-collapse: collapse;
    }

    .bottomSection {
        margin-left: 200px;

        tr, td {
            background: none;
        }

        .progress {
            position: absolute;
            margin-top: -8px;
            opacity: 0.2;
            left: -100%;
            width: 100%;
            height: 0px;
            z-index: 1;
            background: #8F8;
            transition:left 1s;
        }
    }

}
