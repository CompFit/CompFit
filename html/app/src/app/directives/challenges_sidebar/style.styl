@media (min-width: 768px) {
  .challenges-sidebar {
  	position:fixed;
  	left: 0px;
  	height: 100%;
  	min-width: 250px;

    h3 {
      padding-left: 10px;
      padding-right: 10px;
    }

    .navbar {
    	border-radius: 0;

        .navbar-collapse {
          padding: 0;
          max-height: none;
        }
    }

    .list-group {
        overflow-y: auto;
        max-height: 670px;
        overflow-x: hidden;

        a {
            padding: 5px;
            padding-left: 8px;
            padding-right: 8px;

            p {
                margin-top: -30px;
                float:right;
            }
        }
    }
  }

}
