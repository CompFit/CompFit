@media (min-width: 768px) {
  .teams-sidebar {
  	position:fixed;
  	left: 0px;
  	height: 100%;
  	min-width: 250px;

    h3 {
      padding-left: 10px;
      padding-right: 10px;
      i {
        cursor: pointer;
      }
    }

    .navbar {
      border-radius: 0;

        .navbar-collapse {
          padding: 0;
          max-height: none;
        }
    }

    .side-thumbnail {
      max-width: 50px;
      height: auto;
      border: 1px solid #ddd;
      border-radius: 4px;
      float: left;
      margin-right: 5px;
    }

    .side-item {
      height: 80px;
      border-radius: 0px;
    }

    .list-group {
        overflow-y: auto;
        max-height: 670px;
        overflow-x: hidden;
    }
  }




}
