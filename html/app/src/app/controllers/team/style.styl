#team {
    .row {
        margin-left: 0px;
        margin-right: 0px;
    }

    .col-md-3 {
        padding: 0px;
        z-index: 1029;
    }

    .col-md-9 {
        padding: 0px;
    }

    .topSection {
        img {
            width: 130px;
            height: 130px;
            float: left;
            margin-top: 20px;
        }

        .label {
            font-size: 12px;
            padding: 7px 10px;
            text-align: left;
            display: inline-block;
            width: 210px;
            margin: 2px;
        }

        .glyphicon {
            cursor: pointer;
        }
        
        .glyphicon-remove {
            padding-left: 5px;
        }

        .col-sm-10 {
            padding-left: 0px;
        }
    }

    .bottomSection {
        h3 {
            margin-top: 7px;
        }

        .progress {
            margin-botton: 10px;
            text-align: center;

            .progress-value {
                color: black;

                position:absolute;
                right:0;
                left:0;
            }

            .progress-bar {
                color: black;
            }
        }
    }

    /* Portrait tablets and small desktops */
    /* Landscape phones and portrait tablets */
    /* Portrait phones and smaller */
    @media (max-width: 991px) {
        .col-md-3 {
            position:fixed;
            top: 50px;
        }
    }
}
