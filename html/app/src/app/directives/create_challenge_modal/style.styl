
#create_challenge_modal {

    .badge-danger {
        background-color: #D9534F;
        float: right;
    }

    .formErrorMsg {
        color: red;
    }


.searchTeam {
    input {
        padding: 7px;
        background: transparent;
        border: 1px solid #5CB85C;
        border-radius: 7px;
        font-size:16px;
        width: 100%;
    }
    ul {
      margin-top: 2px;
      padding-left: 3px;
      border: 1px solid #C3D0DB;
      line-height: 25px;
      background-color: #fff;
      cursor: pointer;
      width: 100%;
    }
    .opponentSelected {
        position: absolute;
        padding-left: 3px;
        padding-right: 3px;

        z-index: 100;

        font-size:16px;
        color: #6796AD;

        background-color: #EBEBEB;
        border-radius: 4px;

        i {
            cursor: pointer;
            color: black;
        }
    }
}






}
